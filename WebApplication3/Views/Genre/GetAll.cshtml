@model IEnumerable<WebApplication3.Models.Domain.Genre>
@{
    ViewData["Title"] = "GetAll";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h1>List of Genre</h1>
            <td><a class="btn btn-dark" href="/Genre/Add">Add More</a></td>
            <br /><br />
            <table class="table table-striped table-bordered table-dark">
                <tr>
                    <th>Name</th>
                    <th class="text-center">Action</th>
                    <th class="text-center">Action</th>
                </tr>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td class="text-center"><a class="btn btn-success" href="/Genre/Update?id=@item.Id"><i class="bi bi-pen"></i></a></td>
                            <td class="text-center"><a class="btn btn-danger" href="/Genre/Delete?id=@item.Id" onclick="return window.confirm('Are you Sure Delete ?')"><i class="bi bi-trash"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
            
        </div>
    </div>
</div>

