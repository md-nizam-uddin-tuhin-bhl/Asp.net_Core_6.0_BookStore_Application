@model WebApplication3.Models.Domain.Book
@{
    ViewData["Title"] = "Update";
}
<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h1>Add Book</h1>
            <form asp-action="Add" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <lable>Title</lable><br />
                    <input type="text" class="form-controll" asp-for="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <lable>TotalPage </lable><br />
                    <input type="number" class="form-controll" asp-for="TotalPage" />
                    <span asp-validation-for="TotalPage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <lable>Book *</lable><br />
                    <select asp-for="GenreId" asp-items="Model.GenreList" class="from-controll">
                        <option>---Select---</option>
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <lable>Publisher *</lable><br />
                    <select asp-for="PublisherId" asp-items="Model.PublisherList" class="from-controll">
                        <option>---Select---</option>
                    </select>
                    <span asp-validation-for="PublisherId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <lable>Author *</lable><br />
                    <select asp-for="AuthorId" asp-items="Model.AuthorList" class="from-controll">
                        <option>---Select---</option>
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <button type="submit" class="btn btn-dark"><i class="bi bi-save"</button>
                <a href="/Book/GetAll" class="btn btn-primary"><i class="bi bi-list"</a>
            </form>
        </div>
    </div>
</div>
